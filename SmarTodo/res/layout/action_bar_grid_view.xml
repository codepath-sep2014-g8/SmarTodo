<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@color/action_bar_color_grid_view"
    android:gravity="top"
    >

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/ivBackButton_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_action_back_button_white"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-15dp"
        android:visibility="gone"
        />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/ivApplicationIcon_grid_view"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"
        android:layout_toRightOf="@+id/ivBackButton_grid_view"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/tvTitle_home"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/ivAdd_todolist"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tvTitle_home"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_add"
        android:visibility="gone" 
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>