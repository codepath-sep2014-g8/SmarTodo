<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etTitle_ftdl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_title"
        android:ems="10" >
        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/lvToDoItemsList_ftdl"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/llAction_ftdl">

        <ImageView
            android:id="@+id/ivNotification_ftdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification" />
        
        <ImageView
            android:id="@+id/ivNShare_ftdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_social_share" />

        <ImageView
            android:id="@+id/ivColorPicker_ftdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_color_picker" />
        
        <ImageView
            android:id="@+id/ivSave_ftdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save" />
        
        <ImageView
            android:id="@+id/ivDelete_ftdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/llfooter_ftdl">

        <ImageView
            android:id="@+id/ivFooterReminder_ftdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification" />
        
        <TextView
        android:id="@+id/tvReminder_ftdl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:layout_marginLeft="3dp"/>
        
        </LinearLayout>

    

</LinearLayout>
